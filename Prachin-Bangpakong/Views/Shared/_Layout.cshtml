<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <title>กรมชลประทาน</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/menuconfig.css" rel="stylesheet" />


    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        .menu-layout {
            border-radius: 12px;
            background-color: #0965A0;
            margin-left: 5px;
            
            font-size: 30px;
        }
        .glyphicon{
            font-size:13pt
        }
        body {
            height: 100%;
            margin: 0 auto;
            font-family: 'TH SarabunPSK';
        }

        .nav > li > a {
            position: relative;
            display: block;
            padding: 13px 35px;
        }
    </style>
</head>

<body style="padding-top:0px">

    <div class="container" style="padding-right: 0px!important;padding-left:0px!important;">
        <header>
            <img src="~/img/Header/Head.png" class="img-responsive" />


        </header>
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

        </div>
        <div class="navbar-collapse collapse" style="padding-right: 0px!important;padding-left:0px!important;">
            <ul class="nav navbar-nav" style="margin-top:10px;margin-bottom:10px">

                <li class="menu-layout index">@Html.ActionLink("หน้าแรก", "Index", "Home", null, new { @style = "color:white;" })</li>
                <li class="menu-layout station">@Html.ActionLink("ค้นหาข้อมูล", "Station", "Home", null, new { @style = "color:white;" })</li>
                <li class="menu-layout graph">@Html.ActionLink("กราฟ", "Graph", "Home", null, new { @style = "color:white;" })</li>
                <li class="menu-layout map">@Html.ActionLink("แผนที่จุดติดตั้ง", "Map", "Home", null, new { @style = "color:white;" })</li>
                <li class="menu-layout mapsalinity">@Html.ActionLink("แผนที่ความเค็ม", "Mapsalinity", "Home", null, new { @style = "color:white;" })</li>
                <li class="menu-layout document">@Html.ActionLink("รายงาน", "Document", "Home", null, new { @style = "color:white;" })</li>
                @{
                    string user = ViewBag.myBag;
                    if (!String.IsNullOrEmpty(user))
                    {
                        <li class="menu-layout" id="dropdowmenuri">
                            <a data-toggle="dropdown" href="#" style="color:white">
                                <i class="glyphicon glyphicon-user" style="font-size:16px"></i> @ViewBag.myBag
                                <span class="caret" style="color:white"></span>
                            </a>
                            <ul class="dropdown-menu" id="menushowri">
                                <li><a href="#">@Html.ActionLink("ตั้งค่าระดับเตือนภัย", "Index", "AltitudeDatas", null, new { @style = "color:#777" })</a></li>
                                <li><a href="#">@Html.ActionLink("ตั้งค่าการปรับปรุงสถานี", "Index", "stations", null, new { @style = "color:#777" })</a></li>
                                <li><a href="#">@Html.ActionLink("อัพโหลดรูปตัดขวางลำน้ำ", "Index", "Upload", null, new { @style = "color:#777" })</a></li>
                                <li><a style="color:#777;padding-top: 15px;padding-bottom: 15px;" href="" onclick="Logout()"><i class="glyphicon glyphicon-log-out"></i> ออกจากระบบ</a></li>
                            </ul>
                        </li>


                    }
                    else
                    {
                        <li class="menu-layout">@Html.ActionLink("เข้าสู่ระบบ", "Login", "Home", null, new { @style = "color:white;" })</li>
                    }
                }
            </ul>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="text-center">&copy; 2020 กรมชลประทาน</p>

        </footer>
    </div>

    <script>
        function Logout() {
            $.ajax({

                url: "../Home/Logout",
                type: 'POST',
                dataType: 'json',
                success: function (datas) {

                    window.location.href = '/Home/';

                },
                error: function (error) {

                }
            });
        }
    </script>
</body>
</html>
